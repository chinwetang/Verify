<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_title"
        android:layout_marginTop="54dp"
        android:textSize="15sp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llayout_unlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/txt_title"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
<TextView
    android:textSize="14sp"
    android:textColor="#333"
    android:text="或"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_pass_unlock"
            android:textSize="14sp"
            android:clickable="true"
            android:onClick="onPassUnlock"
            android:textColor="#0a85cc"
            android:text="输入密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <gestureunlock.gestureunlock.view.BmGestureLockViewGroup
        xmlns:zhy="http://schemas.android.com/apk/res/gestureunlock.gestureunlock"
        android:id="@+id/id_gestureLockViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:spaceCoefficient="0.5"
        app:circleCoefficient="0.5"
        app:lineStrokeWidth="4dp"
        app:lineAalpha="100"
        zhy:count="3"
        zhy:tryTimes="5" />
<!--   zhy:color_no_finger_inner_circle="#ff085D58"
        zhy:color_no_finger_outer_circle="#ff08F0E0"
        zhy:color_finger_on="#FF1734BF" -->

</RelativeLayout>